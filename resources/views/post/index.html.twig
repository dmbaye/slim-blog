{% extends 'layouts/application.html.twig' %}

{% block content %}
  
  <div class="container">
    {% for post in posts %}
      <div class="post-container">
        <h3><a href="{{ path_for('posts.show', { id: post.id }) }}" class="title">{{ post.title }}</a></h3>
        <p>Posted on {{ post.created_at | date }}</p>
      </div>
    {% endfor %}
  </div>

{% endblock %}