{% extends 'layouts/application.html.twig' %}

{% block content %}

  <div class="container">
    <h1>{{ post.title }}</h1>
    <p>
      Posted on {{ post.created_at | date }}
      | <a href="{{ path_for('posts.edit', { id: post.id }) }}">Edit</a>
      | <a href="{{ path_for('posts.delete', { id: post.id }) }}">Delete</a>
    </p>
    <p>{{ post.body }}</p>
  </div>

  <div class="container">
    <div class="comments">
      <h3>Comments</h3>
      {% include 'comments/_comment.html.twig' %}

      <h4>Post a comment</h4>
      {% include 'comments/_form.html.twig' %}
    </div>
  </div>

{% endblock %}
